<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res/com.mobilecontest.colordection"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/mybg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/im_import_file"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/open_icon" />
        <ImageView 
            android:id="@+id/im_flash"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_cambar_light_p"
            />
        <ImageView 
            android:id="@+id/im_switch_camera"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/ic_cambar_switch_p"
            />
    </LinearLayout>

</RelativeLayout>